<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Card 3D" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AnimationsSample.Card3DPage">
    <Grid Padding="24,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid BackgroundColor="#0944AC" Padding="54">
            <Frame x:Name="card" VerticalOptions="Center" HeightRequest="200" Padding="40">
                <Label Text="There's data on this card too!" VerticalOptions="Center" HorizontalTextAlignment="Center" />
            </Frame>
        </Grid>

        <Button  Grid.Row="1" x:Name="StartAnimation" Text="Start/stop animation" Clicked="StartStopAnimation_Clicked" VerticalOptions="Center" />
    </Grid>
</ContentPage>
