<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="MacOS Bouncy Icons" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AnimationsSample.MacIconBouncePage">
    <Grid Padding="24,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Image x:Name="rainbow" Source="rainbow" WidthRequest="150" HeightRequest="150" HorizontalOptions="Center" VerticalOptions="Center" />

        <Button  Grid.Row="1" x:Name="StartAnimation" Text="Start/stop animation" Clicked="StartStopAnimation_Clicked" VerticalOptions="Center" />
    </Grid>
</ContentPage>
