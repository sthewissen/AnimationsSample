<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="The Apple Shake" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AnimationsSample.ProfileShakePage">
    <Grid Padding="24,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <StackLayout x:Name="profile" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="profile" WidthRequest="150" HeightRequest="150" HorizontalOptions="Center" />
            <Entry WidthRequest="200" Placeholder="Account name..." />
        </StackLayout>

        <Button  Grid.Row="1" x:Name="StartAnimation" Text="Start animation" Clicked="StartStopAnimation_Clicked" VerticalOptions="Center" />
    </Grid>
</ContentPage>
